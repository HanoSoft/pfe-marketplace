{% extends "AdminBundle::adminLayout.html.twig" %}
{% block content %}
    {{ parent() }}

    <div class="container-fluid">
        <div class="row dataTables_wrapper form-inline dt-bootstrap no-footer">
            <table  class="data-table table table-striped table-bordered dataTable no-footer" style="width:100%">
                <thead>
                <tr>
                    <th class="sorting_asc">Promotion</th>
                    <th>Debut</th>
                    <th>Fin</th>
                    <th> Pourcentage </th>
                    <th> Etat </th>
                    <th><em class="fa fa-cog"></em></th>
                </tr>
                </thead>
                <tbody>
                {% for promotion in promotions %}
                    <tr>
                        <td>{{ promotion.name }}</td>
                        <td>{{ promotion.startDate }}</td>
                        <td >{{ promotion.endDate }}</td>
                        <td class="money">{{ promotion.discount }} %</td>
                        <td align="center">
                            {% if promotion.deleted ==false %}
                                <span class="glyphicon glyphicon-ok" style="color:#78D07D;"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-remove " style="color:red;"></span>
                            {% endif %}
                        </td>
                        <td align="center">
                            <a href="#" class="link"><em class="fa fa-eye"></em></a>
                            <a href="#" class="link" ><em class="fa fa-edit"></em></a>
                            <a href="#myModal" class="link" data-toggle="modal" data-wathever="#" ><em class="fa fa-trash-o"></em></a>
                            <a href="#" class="link"><em class="fa fa-picture-o"></em></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {{ include("AdminBundle::delete.html.twig") }}


{% endblock %}


