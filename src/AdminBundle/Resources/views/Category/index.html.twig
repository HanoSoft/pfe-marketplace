
{% extends "AdminBundle::adminLayout.html.twig" %}
{% block content %}
    {{ parent() }}


    <div class="container fluid">
        <h2>Categorie<a class="col-md-offset-10 btn btn-primary btn-md">
            <span class="fa fa-plus-circle"> </span></span> Nouvelle categorie </a>
        </h2>
        <br>
        <div class="row dataTables_wrapper form-inline dt-bootstrap no-footer">
            <table  class="data-table table table-striped table-bordered dataTable no-footer" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="sorting_asc">Marque</th>
                        <th class="sorting_asc">Category</th>
                        <th> Etat </th>
                        <th><em class="fa fa-cog"></em></th>
                    </tr>
                </thead>
                <tbody >
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td></td>
                        <td>{{ category.name }}</td>
                        <td align="center">
                            {% if category.deleted ==false %}
                                <span class="glyphicon glyphicon-ok" style="color:#78D07D;"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-remove " style="color:red;"></span>
                            {% endif %}
                        </td>
                        <td align="center">
                            <a href="{{ path('admin_category_show',{'id': brand.id}) }}" class="link"><em class="fa fa-eye"></em></a>
                            <a href="{{ path('admin_category_edit', {'id': brand.id}) }}" class="link" ><em class="fa fa-edit"></em></a>
                            <a href="#myModal" class="link" data-toggle="modal" data-wathever="{{ path('admin_category_delete', {'id': category.id}) }}" ><em class="fa fa-trash-o"></em></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>

    {{ include("AdminBundle::delete.html.twig") }}

{% endblock %}








 