{% extends "AdminBundle::adminLayout.html.twig" %}
{% block content %}
    {{ parent() }}

    <ul id="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><span class="fa fa-home"> </span></a></li>
        <li><a href="{{ path('admin_category_list') }}"> Catégorie</a></li>
        <li><a > Ajouter</a></li>
    </ul>

     <div class=" form-grids row form-grids-right">
        <div class="widget-shadow " data-example-id="basic-forms">
                <div class="form-body">
                    {{ form_start(form,{'attr': {'class': 'form-horizontal form'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Marque : <span style="color:#C82829;">*</span></label>
                        <div class="col-sm-9">
                            {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label  class="col-sm-2 control-label">Catégorie :</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control ','placeholder':'Nom Du Catégorie','minlength':'2'}}) }}
                            </div>
                        <span class="glyphicon " ></span>
                    </div>
                    <button class="btn btn-warning col-md-offset-10 " type="submit" disabled="true" ><span class="fa fa-plus-circle"> </span> Ajouter</button>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
            </div>
            {% if app.session.flashBag.has('success') %}
                <div class="alert alert-success">
                    {% for msg in app.session.flashBag.get('success') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}