<div id="customer" class="modal fade">
    <div class="modal-dialog modal-confirm modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="pink">Le Client:</h3>
                <hr>
                <p class="text-size"> <strong class="pink">Prénom:</strong> {{ order.customer.name }}</p>
                <p class="text-size"> <strong class="pink"> Nom:</strong> {{ order.customer.familyName }}</p>
                <p class="text-size"> <strong class="pink">Email: </strong>{{ order.customer.email }}</p>
                <p class="text-size"> <strong class="pink">Télephone : </strong>{{ order.customer.phoneNumber }}</p>
                <hr>
                <h3 class="pink">Addresse de livraison:</h3>
                <hr>
                <p class="text-size"><strong class="pink">Pays:</strong> {{ order.customer.addresses[order.customer.addresses|length -1].country }}</p>
                <p class="text-size"><strong class="pink"> Ville:</strong> {{ order.customer.addresses[order.customer.addresses|length -1].city }}</p>
                <p class="text-size"><strong class="pink"> Adresse: </strong>{{ order.customer.addresses[order.customer.addresses|length -1].address }}</p>
                <p class="text-size"><strong class="pink">Code postale: </strong>{{ order.customer.addresses[order.customer.addresses|length -1].postalCode }}</p>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

