{% trans_default_domain 'FOSUserBundle' %}
<div class=" form-grids row form-grids-right">
    <div class="widget-shadow " data-example-id="basic-forms">
        <div class="form-body">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal form' } }) }}
                        <div class="form-group has-feedback">
                            <label  class="col-sm-2 control-label">Mot de passe actuel :</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.current_password, {'attr': {'class': 'form-control ','placeholder':'Mot de passe','minlength':'2'}}) }}
                            </div>
                            <span class="glyphicon " ></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label  class="col-sm-2 control-label">Mot de passe :</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder':'Mot de passe','minlength':'5'}}) }}
                            </div>
                            <span class="glyphicon " ></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label  class="col-sm-2 control-label">Répéter le mot de passe :</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder':'Mot de passe','minlength':'5'}}) }}
                            </div>
                            <span class="glyphicon " ></span>
                        </div>
                        <button class="btn btn-success col-md-offset-10 " type="submit" disabled="true" ><span class="fa fa-edit"> </span> Enregistrer</button>
            {{ form_end(form) }}
        </div>

    </div>
</div>
