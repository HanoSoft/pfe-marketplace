{% extends "AdminBundle::adminLayout.html.twig" %}
{% block content %}
    {{ parent() }}

    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">

    <script src="{{ asset('assets/jquery.elevatezoom.js') }}" type="text/javascript"></script>

    <div class="container" >
        <div class="row" align="center">

            <div class="container col-md-5 col-lg-4 col-lg-offset-1">
                <div id='carousel-custom' class='carousel slide ' data-ride='carousel'>
                    <div class='carousel-outer'>
                        <!-- me art lab slider -->
                        <div class='carousel-inner '>



                                    <div class='item active '>

                                        <img id="zoom_01" src="{{ asset('uploads/brand/'~ brand.brandImage.name ) }}" xoriginal="{{ asset('uploads/brand/'~ brand.brandImage.name ) }}" width="400" />
                                    </div>

                                    <div class='item ' >

                                        <img  id="zoom_02"  src="{{ asset('uploads/brand/'~ brand.logo.name ) }}" data-zoom-image="{{ asset('uploads/brand/'~ brand.logo.name ) }}"  />

                                    </div>


                        </div>


                        <!-- sag sol -->
                        <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
                            <span class='glyphicon glyphicon-menu-left'></span>
                        </a>
                        <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
                            <span class='glyphicon glyphicon-menu-right'></span>
                        </a>
                    </div>

                    <!-- thumb -->

                    <ol class='carousel-indicators mCustomScrollbar meartlab'>

                                <li data-target='#carousel-custom' data-slide-to='zoom_01' class='active'><img src="{{ asset('uploads/brand/'~ brand.brandImage.name ) }}" alt='' /></li>

                                <li data-target='#carousel-custom' data-slide-to='zoom_02'><img src="{{ asset('uploads/brand/'~ brand.logo.name ) }}" alt='' /></li>


                    </ol>
                </div>
            </div>



            <div class="col-md-4" >

                <h2 class="brand-title"> {{ brand.brandName }} </h2>
                <br>
                {#<div class="prix-montant">
                    {{ product.price }} â‚¬
                    <div class="prix-decote">-0%</div>
                </div>



                <p>{{ product.quantity }} disbonible</p>
                {% for size in product.sizes %}
                    <p> {{ size.size }}</p>
                {% endfor %}
            </div>#}


            </div>
        </div>



        <script>
            $("#zoom_01").elevateZoom();

            $("#zoom_02").elevateZoom();



        </script>







        <br>
        <section class="home-content-top">
            <div class="container">

                <!--our-quality-shadow-->
                <div class="clearfix"></div>


                <div class="tabbable-panel margin-tops4 ">
                    <div class="tabbable-line">
                        <ul class="nav nav-tabs tabtop  tabsetting">
                            <li class="active"> <a href="#tab_default_1" data-toggle="tab"> Description </a> </li>

                        </ul>

                        <div class="tab-content margin-tops">

                            <div class="tab-pane active fade in" id="tab_default_1">

                                <div class="col-md-8">
                                    {{ brand.description | raw }}

                                </div>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </section>




{% endblock %}