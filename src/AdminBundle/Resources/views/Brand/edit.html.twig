{% extends "AdminBundle::adminLayout.html.twig" %}
{% block content %}
    {{ parent() }}
    <div class=" form-grids row form-grids-right">
        <div class="widget-shadow " data-example-id="basic-forms">
            <div class="form-title form-header">
                <h4>Modifier Marque</h4>
            </div>
            <div class="form-body">
                {{ form_start(form,{'attr': {'class': 'form-horizontal form'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <label  class="col-sm-2 control-label">Description: <span style="color:#C82829;">*</span></label>
                    <div class="col-sm-9">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label  class="col-sm-2 control-label">Nom marque : *</label>
                    <div class="col-sm-9" >
                        {{ form_widget(form.brandName, {'attr': {'class': 'form-control','placeholder':'Nom De Produit','minlength':'2'}}) }}
                    </div>
                    <span class="glyphicon "></span>
                </div>

            </div>


            <button class="btn btn-success col-md-offset-10 " disabled="true" type="submit" ><span class="fa fa-edit"> </span> Modifier</button>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
    </div>




{% endblock %}
