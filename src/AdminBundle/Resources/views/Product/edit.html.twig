{% extends "CoreBundle:Product:layout.html.twig" %}

{% block content %}

    {{ parent() }}



    <div class=" form-grids row form-grids-right">
        <div class="widget-shadow " data-example-id="basic-forms">

            <div class="form-title form-header">

                <h4>Modifier Produit</h4>


            </div>
            <div class="form-body">

                {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    <label  class="col-sm-2 control-label">Catégorie : <span style="color:#C82829;">*</span></label>
                    <div class="col-sm-9">
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}

                    </div>

                </div>

                <div class="form-group prod ">
                    <label  class="col-sm-2 control-label">Produit : *</label>
                    <div class="col-sm-9" >

                        {{ form_widget(form.productName, {'attr': {'class': 'form-control productName','placeholder':'Nom De Produit'}}) }}

                        <span id="productHelp" class="help-block sr-only">
                            le nom de produit doit contenir au minimum 2 caractères.
                            </span>
                    </div>
                    <span class="glyphicon " id="productAlertIcon"></span>
                </div>

                <div class="form-group containerDetails">
                    <label  class="col-sm-2 control-label">Description : *</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.productDetails, {'attr': {'class': 'form-control details','placeholder':'Description','rows':'10','cols':'100'}}) }}
                        <span id="detailsHelp" class="help-block sr-only">
                            la description de produit doit contenir au minimum 5 caractères.
                            </span>
                    </div>
                    <span class="glyphicon " id="detailsAlertIcon"></span>
                </div>

                <div class="form-group containerDetails">
                    <label  class="col-sm-2 control-label">Couleur :</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.color, {'attr': {'class': 'form-control','placeholder':'Couleur'}}) }}
                    </div>
                </div>

                <div class="form-group containerQuantity">
                    <label  class="col-sm-2 control-label">Quantité : *</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control quantity','placeholder':'Quantité'}}) }}
                        <span id="quantityHelp" class="help-block sr-only">
                            quantité doit contenir 1 caractére au min.
                            </span>
                    </div>
                    <span class="glyphicon " id="quantityAlertIcon"></span>
                </div>

                <div class="form-group containerPrice">
                    <label  class="col-sm-2 control-label">Prix : *</label>
                    <div class="col-sm-9 ">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control price','placeholder':'Prix'}}) }}
                        <span id="priceHelp" class="help-block sr-only">
                            le prix doit etre de type decimal
                            </span>
                    </div>
                    <span class="glyphicon "  id="priceAlertIcon"></span>
                </div>


                <button class="btn btn-success col-md-offset-10 " type="submit" id="btn" ><span class="fa fa-plus-circle"> </span> Modifier</button>

                {# <button class="btn btn-success"><span class="fa fa-edit"> </span> Modifier</button>
                 <button class="btn btn-danger"><span class="fa fa-trash-o"> </span> Supprimer</button>
                 #}



                {{ form_rest(form) }}
                {{ form_end(form) }}





            </div>
        </div>
    </div>


    <div class="row">
    
    {%  for image in images %}




            <div class="col-md-3">
                <div class="thumbnail">

                        <img src="{{ asset('uploads/productImage/'~ image.name ) }}">
                        <div class="caption">
                            <p>Nom : {{ image.label }}</p>
                        </div>
                    <a href="{{ path('admin_product_image_edit', {'id': image.id}) }}" class="btn btn-success"><span class="fa fa-edit"> </span> Modifier</a>
                    <a href="#myModal" class="btn btn-danger" data-toggle="modal" data-wathever="{{ path('admin_product_image_delete', {'id': image.id}) }}" ><em class="fa fa-trash-o"></em></a>

                </div>
            </div>

    {% endfor %}
        </div>

    <div class="row">

        {%  for size in sizes %}




            <div class="col-md-3">
                {{ size.size }}
                    <a href="{{ path('admin_product_image_edit', {'id': size.id}) }}" class="btn btn-success"><span class="fa fa-edit"> </span> Modifier</a>
                    <a class="btn btn-danger"><span class="fa fa-trash-o"> </span> Supprimer</a>
            </div>

        {% endfor %}
    </div>



    {{ include("CoreBundle:Product:delete.html.twig") }}
    
    
    
    {% block js %}
        {{ parent() }}
        <script src="{{ asset('CoreJs/Image/delete.js') }}"></script>
    {% endblock %}

{% endblock %}

