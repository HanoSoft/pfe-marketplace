{% extends "AdminBundle::adminLayout.html.twig" %}

{% block content %}

    {{ parent() }}



    <div class=" form-grids row form-grids-right">
        <div class="widget-shadow " data-example-id="basic-forms">

            <div class="form-title form-header">

                <h4>Ajouter Produit</h4>


            </div>
                <div class="form-body">

                    {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Catégorie : *</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group prod ">
                        <label  class="col-sm-2 control-label">Produit : *</label>
                        <div class="col-sm-9" >
                           {{ form_widget(form.productName, {'attr': {'class': 'form-control productID','placeholder':'Nom De Produit'}}) }}

                               <span id="productHelp" class="help-block sr-only">
                            le nom de produit doit contenir au minimum 2 caracteres.
                            </span>
                        </div>

                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Description : *</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.productDetails, {'attr': {'class': 'form-control productDetails','placeholder':'Description','rows':'10','cols':'100'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Couleur :</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.productColor, {'attr': {'class': 'form-control','placeholder':'Couleur'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Quantité : *</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.quantity, {'attr': {'class': 'form-control quantity','placeholder':'Quantité'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Prix : *</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.price, {'attr': {'class': 'form-control price','placeholder':'Prix'}}) }}
                        </div>
                    </div>


                    <button class="btn btn-warning col-md-offset-10 disabled" type="submit" id="btn"><span class="fa fa-plus-circle"> </span> Ajouter</button>

                   {# <button class="btn btn-success"><span class="fa fa-edit"> </span> Modifier</button>
                    <button class="btn btn-danger"><span class="fa fa-trash-o"> </span> Supprimer</button>
                    #}



                    {{ form_rest(form) }}
                    {{ form_end(form) }}





            </div>
        </div>
    </div>
{% endblock %}

